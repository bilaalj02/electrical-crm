# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/electrical-crm

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Gmail Account 1
GMAIL1_CLIENT_ID=your-gmail1-client-id
GMAIL1_CLIENT_SECRET=your-gmail1-client-secret
GMAIL1_REFRESH_TOKEN=your-gmail1-refresh-token
GMAIL1_EMAIL=email1@gmail.com

# Gmail Account 2
GMAIL2_CLIENT_ID=your-gmail2-client-id
GMAIL2_CLIENT_SECRET=your-gmail2-client-secret
GMAIL2_REFRESH_TOKEN=your-gmail2-refresh-token
GMAIL2_EMAIL=email2@gmail.com

# Microsoft Account
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_EMAIL=your-email@outlook.com

# GoDaddy Email (IMAP)
GODADDY_EMAIL=your-email@yourdomain.com
GODADDY_PASSWORD=your-godaddy-password
GODADDY_IMAP_HOST=imap.secureserver.net
GODADDY_IMAP_PORT=993

# Email Sync Settings
EMAIL_SYNC_INTERVAL=300000
EMAIL_BATCH_SIZE=50
