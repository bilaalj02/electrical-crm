# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/electrical-crm

# JWT Secret (change this to a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Encryption Key for storing OAuth tokens (32+ character random string)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Google OAuth (Gmail Integration)
# Get these from: https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/oauth/gmail/callback

# Microsoft OAuth (Outlook Integration)
# Get these from: https://portal.azure.com
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_SECRET_ID=your-microsoft-secret-id
MICROSOFT_TENANT_ID=your-microsoft-tenant-id
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/oauth/microsoft/callback

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5174

# Auto Sync Configuration
AUTO_SYNC=true
SYNC_INTERVAL_MINUTES=15

# Email Configuration (optional - for sending emails via SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
